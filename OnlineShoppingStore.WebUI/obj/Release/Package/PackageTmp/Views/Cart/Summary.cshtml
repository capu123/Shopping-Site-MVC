@model OnlineShoppingStore.Domain.Entities.Cart

<div style="margin-right: 3px;">
    <div class="navbar-right">
        @Html.ActionLink("Checkout", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery },
                                                    new { @class = "btn btn-primary navbar-btn" })
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    </div>
    <div class="navbar-text navbar-right" style="margin-left:18px;">
        <b>Your cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c") &nbsp;

    </div>
</div>